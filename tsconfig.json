{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"rootDir": "src",
		"outDir": "out",
		"lib": [
			"ES2022",
			"DOM"
		],
		"paths": {
			"@declarations/*": ["./src/declarations/*"],
			"@web/*": ["./src/web/*"],
			"@node/*": ["./src/node/*"]	  
		},
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*", "src/node-test/**/*"]
}
