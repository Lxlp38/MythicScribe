{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"rootDir": "src",
		"outDir": "out",
		"lib": [
			"ES2022",
			"DOM"
		],
		"paths": {
			"@node/*": ["./src/node/*"],
			"@web/*": ["./src/web/*"],
			"@webviews/*": ["./src/webviews/*"],
		},
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*", "src/node-test/**/*"]
}
